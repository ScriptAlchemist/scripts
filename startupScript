[haxe]
symbol = "‚åò "

[hg_branch]
symbol = "Ôêò "

[java]
symbol = "Óâñ "

[julia]
symbol = "Óò§ "

[lua]
symbol = "Óò† "

[memory_usage]
symbol = "Ô°ö "

[meson]
symbol = "Ô®∂ "

[nim]
symbol = "Ôö§ "

[nix_shell]
symbol = "Ôåì "

[nodejs]
symbol = "Óúò "

[os.symbols]
Alpine = "ÔåÄ "
